<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>


<AnchorPane fx:id="rootPane" prefHeight="520.0" prefWidth="450.0"
            stylesheets="@../Styles/back-ground-style.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="taskmanagement.Controllers.PomodoroController">

    <!-- Nút Thoát -->
    <Button fx:id="exitButton"
            layoutX="20.0" layoutY="20.0"
            prefHeight="38.0" prefWidth="90.0"
            text="Thoát" textFill="WHITE"
            onAction="#handleExit"
            style="-fx-background-color: #FFFFFF; -fx-background-radius: 25; -fx-font-weight: bold; -fx-text-fill: black;">
        <font>
            <Font name="Arial" size="16.0" />
        </font>
    </Button>

    <!-- Vòng tròn chính -->
    <Circle fill="#e74c3c" layoutX="225.0" layoutY="250.0"
            radius="110.0" stroke="white" strokeWidth="3.0" />

    <!-- Đồng hồ đếm -->
    <Label fx:id="countdownLabel"
           layoutX="150.0" layoutY="190.0"
           prefWidth="150.0" prefHeight="60.0"
           text="25:00"
           alignment="CENTER" textFill="WHITE"
           style="-fx-font-size: 42px; -fx-font-weight: bold;" />

    <!-- Nút Play -->
    <Circle accessibleRole="BUTTON"
            fill="#27ae60"
            layoutX="180.0" layoutY="290.0"
            onMouseClicked="#startPomodoroButton"
            radius="26.0" stroke="WHITE" strokeWidth="3.0" />
    <Polygon fill="WHITE" layoutX="183.0" layoutY="300.0"
             mouseTransparent="true" rotate="90.0"
             scaleX="0.25" scaleY="0.25">
        <points>
            <Double fx:value="-50.0" />
            <Double fx:value="40.0" />
            <Double fx:value="50.0" />
            <Double fx:value="40.0" />
            <Double fx:value="0.0" />
            <Double fx:value="-60.0" />
        </points>

    </Polygon>

    <!-- Nút Stop -->
    <Circle accessibleRole="BUTTON"
            fill="#c0392b"
            layoutX="270.0" layoutY="290.0"
            onMouseClicked="#stopPomodoroButton"
            radius="26.0" stroke="WHITE" strokeWidth="3.0" />
    <Rectangle fill="WHITE" layoutX="260.0" layoutY="280.0"
               mouseTransparent="true" height="22.0" width="22.0" />

    <!-- Nhãn chế độ -->
    <Label fx:id="modeLabel"
           layoutX="130.0" layoutY="400.0"
           prefHeight="50.0" prefWidth="190.0"
           text="TẬP TRUNG"
           alignment="CENTER"
           style="-fx-background-color: #3498db; -fx-text-fill: white;
                  -fx-background-radius: 20; -fx-font-size: 22px; -fx-font-weight: bold;" />

    <!-- Tổng thời gian -->
    <Label fx:id="totalTimeLabel"
           layoutX="120.0" layoutY="460.0"
           prefHeight="32.0" prefWidth="210.0"
           text="Tổng thời gian: 0 phút"
           alignment="CENTER"
           style="-fx-background-color: #e74c3c; -fx-background-radius: 15;
                  -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;" />

    <!-- Chọn bài nhạc -->
    <ComboBox fx:id="songPicker"
              layoutX="130.0" layoutY="25.0"
              prefWidth="150.0"
              style="-fx-background-color: white; -fx-border-radius: 10;" />

    <!-- Nút Bắt đầu -->
    <Button fx:id="playPauseButton"
            layoutX="300.0" layoutY="25.0"
            prefHeight="30.0" prefWidth="70.0"
            text="Bắt đầu" textFill="WHITE"
            onAction="#handlePlayPause"
            style="-fx-background-color: #FFFFFF;
                    -fx-background-radius: 25; -fx-font-weight: bold; -fx-text-fill: black;" />

</AnchorPane>
